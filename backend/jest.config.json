{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/src"],
  "testMatch": [
    "**/__tests__/**/*.ts",
    "**/*.test.ts"
  ],
  "testPathIgnorePatterns": [
    "\\\\node_modules\\\\",
    "<rootDir>/src/__tests__/setup.ts"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/**/__tests__/**",
    "!src/**/index.ts"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  },
  "setupFilesAfterEnv": ["<rootDir>/src/__tests__/setup.ts"],
  "testTimeout": 30000
}